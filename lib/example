const sql = require("better-sqlite3");
const db = sql("project.db");
db.exec(
  `
  CREATE TABLE IF NOT EXISTS metric (
    month TEXT PRIMARY KEY,
    total_revenue INTEGER,
    project INTEGER,
    time INTEGER,
    resource INTEGER
  );

  INSERT INTO metric VALUES('current_month', 5300989, 95, 1022, 101);
  INSERT INTO metric VALUES('previous_month', 5200989, 100, 1300, 120);
`
);
db.exec(
  `
CREATE TABLE IF NOT EXISTS project (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    projectManager TEXT,
    dueDate DATE,
    status TEXT,
    progress INTEGER
);

INSERT INTO project (name, projectManager, dueDate, status, progress)
VALUES 
    ('Nesla Web Application', 'Alice Johnson', '2024-08-17', 'On going', 85),
    ('Fintech Mobile App', 'Jane Smith', '2024-05-15', 'Completed', 20),
    ('E-commerce Platform', 'Peter Eke', '2024-01-12', 'At risk', 100),
    ('HMS Project', 'Samuel Eke', '2024-01-20', 'On going', 100),
    ('Datascale AI App', 'John Doe', '2024-04-25', 'Delayed', 45);

`
);
db.exec(
  `
  CREATE TABLE IF NOT EXISTS progress(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    total_project INTEGER,
    completed_project INTEGER,
    delayed_project INTEGER,
    ongoing_project INTEGER
  );

  INSERT INTO progress ('total_project', 'completed_project', 'delayed_project', 'ongoing_project')
  VALUES
  (95, 26, 35, 20);
`
);
db.exec(
  `
  CREATE TABLE IF NOT EXISTS task_list(
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    task TEXT,
    checked TEXT,
    approval TEXT
  );

  INSERT INTO task_list ('task', 'checked', 'approval')
  VALUES
  ('Create a user flow of social application design', 'Yes', 'Approved'),
  ('Implement user authentication with OAuth2', 'No', 'In review'),
  ('Design database schema for user profiles', 'Yes', 'Approved'),
  ('Develop REST API endpoints for user management', 'Yes', 'In review'),
  ('Write unit tests for authentication module', 'No', 'On going');
`
);
db.exec(
  `
  CREATE TABLE IF NOT EXISTS project_workload (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    employee_name TEXT,
    no_of_project INTEGER
  );

  INSERT INTO project_workload('employee_name', 'no_of_project')
  VALUES
  ('Sam', 7),
  ('Alex', 5),
  ('Jordan', 3),
  ('Taylor', 10),
  ('Casey', 6),
